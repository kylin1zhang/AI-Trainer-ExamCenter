# ======================================
# 生产环境配置模板
# 使用时请复制为 application-prod.yml 并修改敏感信息
# ======================================

server:
  port: 8080

spring:
  # 数据源配置（生产环境）
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://your-prod-host:3306/exam_center?useUnicode=true&characterEncoding=utf8&useSSL=true&serverTimezone=Asia/Shanghai
    username: your_prod_username
    password: your_prod_password
  
  # Redis 配置（生产环境）
  data:
    redis:
      host: your-prod-redis-host
      port: 6379
      password: your_prod_redis_password
      database: 0

# JWT 配置（生产环境 - 请修改为更安全的密钥）
jwt:
  secret: please-change-this-secret-key-in-production
  expiration: 604800000  # 7天

# 日志配置（生产环境 - 简化日志）
logging:
  level:
    com.zhixuewujie.examcenter: info
    org.springframework.security: warn
  file:
    name: logs/examcenter.log
    max-size: 10MB
    max-history: 30


