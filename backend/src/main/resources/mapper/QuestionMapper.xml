<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixuewujie.examcenter.mapper.QuestionMapper">

    <!-- 随机获取题目 -->
    <select id="selectRandomQuestions" resultType="com.zhixuewujie.examcenter.entity.Question">
        SELECT * FROM tb_question
        WHERE bank_id = #{bankId}
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        AND deleted = 0
        ORDER BY RAND()
        LIMIT #{count}
    </select>

</mapper>
